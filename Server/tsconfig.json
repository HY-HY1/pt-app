{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],  // Make sure types directory is included
    "paths": {
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"],
      "@middleware/*": ["./middleware/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": ["*.ts", "config/**/*.ts", "middleware/**/*.ts", "routes/**/*.ts"],
  "exclude": ["node_modules"]
}
